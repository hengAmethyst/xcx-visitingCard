.no-card .text-wrapper {
    margin: 50rpx 190rpx 50rpx 70rpx;
    width: 490rpx;
    height: 180rpx;
    opacity: 0.8;
}

.text-wrapper .no-card-text {
    display: block;
    font-size: 70rpx;
    line-height: 1.29;
    font-weight: 600;
    color: #333839;
}

.no-card-img {
    display: block;
    position: absolute;
    left: 50%;
    top: 50%;
    margin-left: -300rpx;
    margin-top: -200rpx;
    width: 600rpx;
    height: 400rpx;
}

.create-btn {
    position: absolute;
    bottom: 100rpx;
    left: 50%;
    margin-left: -305rpx;
    width: 610rpx;
    height: 94rpx;
    line-height: 94rpx;
    text-align: center;
    color: #fff;
    border-radius: 6px;
    font-size: 40rpx;
    background-color: #20b6be;
}

.swiper-container {
    position: fixed;
    width: 750rpx;
    height: 770rpx;
    z-index: 1;
    overflow: hidden;
}

.swiper-bg {
    display: block;
    position: absolute;
    left: 0;
    top: 0;
    width: 750rpx;
    height: 1300rpx;
    z-index: -99;
}

.swiper-box {
    height: 452rpx;
}

.swiper-box .wx-swiper-dots.wx-swiper-dots-horizontal {
    margin-bottom: -10rpx;
}

.swiper-box .wx-swiper-dot {
    width: 30rpx;
    display: inline-flex;
    height: 6rpx;
    margin-left: 12rpx;
    justify-content: space-between;
}

.swiper-box .wx-swiper-dot::before {
    content: '';
    flex-grow: 1;
    background-color: #dedede;
    border-radius: 3rpx;
}

.swiper-box .wx-swiper-dot-active::before {
    background-color: #20b6be;
}

.swiper-item {
    position: relative;
    margin: 32rpx auto;
    width: 680rpx;
    height: 388rpx;
    z-index: 10;
}

.operation-btn {
    display: flex;
    position: fixed;
    left: 50%;
    margin-left: -305rpx;
    bottom: 100rpx;
    width: 610rpx;
    flex-direction: row;
    z-index: 10;
}

.operation-btn .btn {
    margin-right: 50rpx;
    width: 170rpx;
    text-align: center;
}

.operation-btn .btn .icon-img {
    display: block;
    margin-bottom: 16rpx;
    width: 170rpx;
    height: 170rpx;
}

.share-btn {
    width: inherit;
    height: inherit;
    position: inherit;
    display: inherit;
    padding: 0;
    margin: 0;
    box-sizing: inherit;
    font-size: inherit;
    text-align: inherit;
    line-height: inherit;
    border-radius: 0;
    overflow: inherit;
    color: inherit;
    background: inherit;
}

.share-btn::after {
    border: none;
    width: 0;
    height: 0;
}

.operation-btn .btn .icon-desc {
    color: #445354;
    font-size: 24rpx;
}

.mask {
    display: flex;
    position: absolute;
    left: 0;
    bottom: 0;
    width: 680rpx;
    height: 80rpx;
    background-color: rgba(51, 56, 57, 0.95);
    border-radius: 0 0 6rpx 6rpx;
}

.mask .edit, .mask .del {
    position: relative;
    flex: 1;
    text-align: center;
    line-height: 80rpx;
    color: #fff;
    font-size: 28rpx;
    z-index: 1;
}

.mask .edit::after {
    position: absolute;
    display: block;
    content: "";
    top: 30rpx;
    right: 0;
    width: 1rpx;
    height: 20rpx;
    background-color: #9a9a9d;
    z-index: 10;
}
